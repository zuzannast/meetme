.events__events-list
  %ul.events-list.events__container-flex
    - user_events.each do |event|
      %li.event__box-flex
        .demo-card-event.mdl-card.mdl-shadow--2dp
          .mdl-card__title.mdl-card--expand
            %h4
              = event.showtime[:movie][:title]
              = event.showtime[:time]
          .events__event-box-theater
            = event.showtime[:theater][:city][:name] + ',' + event.showtime[:theater][:name]
          .mdl-card__actions.mdl-card--border
            %img.mdl-list__item-avatar{src: event.organiser[:gravatar] }
            %p.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
              = event.organiser[:name]
            = link_to edit_event_path(event) do
              %p.mdl-button.mdl-color-text--grey-200.mdl-js-button.mdl-js-ripple-effect.pull-right
                Edit
            .mdl-layout-spacer
